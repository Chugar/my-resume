section(id="contact-us")
    div(class="container") 

        h2 Contact
    
        div(class="row")
            
            //- Left Side
            div(class="col-lg-6 left-side")

                div(class="row")
                    div(class="col-4 icon")
                        div(class="icon-container")
                            i(class="fas fa-map-marker")
                    div(class="col-8 text")
                        p Actuellement entre Paris et Nancy
                        p Mobile en France
                
                div(class="row")
                    div(class="col-4 icon")
                        div(class="icon-container")
                            i(class="fas fa-mobile")
                    div(class="col-8 text")
                        a(href="") 06 52 90 63 21

                div(class="row")
                    div(class="col-4 icon")
                        div(class="icon-container")
                            i(class="fas fa-at")
                    div(class="col-8 text")
                        a(href="") chiheb.berkane@gmail.com
            
            
            //- Right Side
            div(class="col-lg-6  right-side")

                form#contact-form
                    
                    div(class="form-field")
                        
                        input(
                            type="text", id="contact-fullname", name="fullname", placeholder="Nom et pr√©nom"
                            required
                        )
                        small#fullname-error
                    
                    div(class="form-field")
                        
                        input(
                            type="text", id="contact-email", name="email", placeholder="Email" 
                            pattern="[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)"
                            required
                        )
                        small#email-error

                    textarea(id="contact-message", name="message", cols="30", rows="5" placeholder="Entrez votre message..." required)
                    
                    input#envoyer(type="submit" value="Envoyer")
                    div#loading
                        div.loader
